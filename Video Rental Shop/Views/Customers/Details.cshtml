@model Video_Rental_Shop.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name @Model.Surname</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>
    }
    else
    {
        <li>Release date: Not entered yet</li>
    }
    <li>E-mail: @Model.Email</li>
</ul>