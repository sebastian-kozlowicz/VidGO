@model Video_Rental_Shop.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.MovieGenre.Name</li>
    @if (Model.ReleaseDate.HasValue)
    {
        <li>Release date: @Model.ReleaseDate.Value.ToShortDateString()</li>
    }
    else
    {
        <li>Release date: Not entered yet</li>
    }
    <li>Number in stock: @Model.NumberInStock</li>
    <li>Number Available: @Model.NumberAvailable</li>
</ul>
