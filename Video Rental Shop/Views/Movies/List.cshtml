@model IEnumerable<Video_Rental_Shop.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr style="display:none">
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th colspan="3" class="text-center" style="width:5%">Options</th>
                <th class="text-center" style="width:5%">#</th>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td style="width:5%">@Html.ActionLink("Details", "Details", "Movies", new { id = Model.ElementAt(i).Id }, new { @class = "btn btn-info btn-xs" })</td>
                    <td style="width:5%">@Html.ActionLink("Edit", "Edit", "Movies", new { id = Model.ElementAt(i).Id }, new { @class = "btn btn-warning btn-xs" })</td>
                    <td style="width:5%"><button data-movie-id="@Model.ElementAt(i).Id" class="btn btn-danger btn-xs js-delete">Delete</button></td>
                    <td class="text-center">@(i + 1)</td>
                    <td>@Model.ElementAt(i).Name</td>
                    <td>@Model.ElementAt(i).Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#movies").DataTable();

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "Movies/Delete/" + button.attr("data-movie-id"),
                            success: function () {
                                location.reload();
                            }
                        });
                    }
                });
            });
        });
    </script>
}